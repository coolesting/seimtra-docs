doctype html
html
	head
		title = @title
		link rel='stylesheet' type='text/css' href='/css/style.css'
		link rel='stylesheet' type='text/css' href='/css/system.css'
		link rel='stylesheet' type='text/css' href='/css/table-1.css'
	body
		#wrap
			#status_bar.clear
				- @status_bar.each do | item |
					span class=""
						a href="#{item[:link]}" = item[:name].capitalize

			#description.clear
				p = @title

			- if settings.msg
				#msg.clear = settings.msg

			- unless settings.opt_events.empty?
				#opt.right
					form
						- if settings.opt_events.include? :new
							a href="#{request.path}/new"
								button New

						- if settings.opt_events.include? :save
							input type="submit" name="form" value="Click here to save" form="form"

			#main.left == yield
